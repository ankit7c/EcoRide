<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book <%= car.carModel %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
      <h1 class="text-center">Book <%= car.carModel %></h1>
      <p><strong>Company:</strong> <%= car.carCompany %></p>
      <p><strong>Mileage:</strong> <%= car.mileage %> km</p>
      <p><strong>Price per Hour:</strong> $<%= car.price %></p>
  
      

      <form id="booking-form" action="/<%= username %>/car/<%= car.carId %>/confirm-booking" method="POST">
        
        <div class="mb-3">
          <label for="hours" class="form-label">Number of Hours</label>
          <input type="number" id="hours" name="hours" class="form-control" min="1" required>
        </div>
      
        
      
        <p><strong>Total Price:</strong> $<span id="totalPrice">0</span></p>
      
        <button type="submit" class="btn btn-primary">Confirm Booking</button>
        <a href="/<%= username %>/cars/book" class="btn btn-secondary">Cancel</a>
      </form>
      
    </div>
  
    <script>
      // Pass car price from EJS to JavaScript safely
      const pricePerHour = <%= car.price %>;

  
      // Get DOM elements
      const hoursInput = document.getElementById('hours');
      const totalPriceElement = document.getElementById('totalPrice');
  
      // Event listener to calculate and update total price dynamically
      hoursInput.addEventListener('input', () => {
        const hours = parseInt(hoursInput.value) || 0; // Ensure hours is a valid number
        const totalPrice = hours * pricePerHour;      // Calculate total price
        totalPriceElement.innerText = totalPrice.toFixed(2); // Display price with 2 decimals
      });
    </script>
  </body>
</html>  